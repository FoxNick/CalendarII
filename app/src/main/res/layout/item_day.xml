<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="@dimen/item_day_size"
        android:layout_height="@dimen/item_day_size"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/tv_greg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:gravity="center_horizontal|bottom"
            android:padding="0dp"
            android:textSize="@dimen/greg_text_size" />

        <TextView
            android:id="@+id/tv_lunar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_greg"
            android:layout_centerHorizontal="true"
            android:gravity="center_horizontal|top"
            android:textSize="@dimen/lunar_text_size" />

        <View
            android:id="@+id/fl_event"
            android:layout_width="3dp"
            android:layout_height="3dp"
            android:layout_above="@id/tv_lunar"
            android:layout_toRightOf="@id/tv_greg"
            android:background="@drawable/bg_primary_left_top_r10"
            android:visibility="gone"></View>

        <View
            android:id="@+id/fl_select"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_primary_border_r60"
            android:visibility="gone"></View>

        <TextView
            android:id="@+id/tv_holiday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:text="假"
            android:textColor="?colorAccent"
            android:textSize="@dimen/holiday_text_size"
            android:visibility="gone" />
        <TextView
            android:id="@+id/tv_work"
            android:textSize="5dp"
            android:text="班"
            android:textColor="#fff"
            android:padding="2dp"
            android:background="@drawable/bg_primary_r60"
            android:layout_marginRight="5dp"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:id="@+id/iv_birth"
            android:layout_width="4dp"
            android:layout_height="4dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_margin="4dp"
            android:background="@drawable/bg_left_bottom" />
    </RelativeLayout>
</FrameLayout>

